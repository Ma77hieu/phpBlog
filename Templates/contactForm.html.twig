{% block contactForm %}
    <section id="contact" class="contact bg-mega fix">
        <div class="container">
            <div class="row">
                <div class="main_contact roomy-100 text-white" id="main_contact">
                    <input type="hidden" name="csrf_token" value="{{ session.csrfToken }}">
                    <h2 class="text-white">Me contacter</h2>
                    <form action="contact" method="post" class="contact-form">
                        <div class="form-group col-sm-6">
                            <label for="last_name">Nom: </label>
                            <input class="form-control" type="text" name="last_name" id="mast_name" value="" required/>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="first_name">Pr√©nom: </label>
                            <input class="form-control" type="text" name="first_name" id="first_name" value=""
                                   required/>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group ">
                                <label for="email">Email:</label>
                                <input class="form-control" type="email" name="email" id="email" value="" required/>
                            </div>
                            <div class="form-group">
                                <label for="message">Votre message:</label>
                                <textarea rows="4" class="form-control" type="text" name="message" id="message" value="" required></textarea>
                            </div>
                            <div class="form-group text-center">
                                <input class="btn btn-primary" type="submit" value="Envoyer"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}