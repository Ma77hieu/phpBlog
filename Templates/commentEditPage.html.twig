{% extends "index.html.twig" %}

{% block commentEditPage %}
    <div class="container">
        <div class="row">
            <h2 class="m-bottom-20">Modifier mon commentaire</h2>
            <div class="col">
                <form action="save?comment_id={{ comment.comment_id }}&blogpost_id={{ blogpost.blogpost_id }}"
                      method="post"
                      class="comment_modif-form">
                    <div class="form-group">
                        <label for="comment_edit_title" class="col-md-1 p-r-5 text-right">Titre: </label>
                        <input type="text" name="comment_edit_title" id="comment_edit_title"
                               value="{{ comment.title }}"/>
                    </div>
                    <div class="form-group">
                        <label for="comment_edit_content" class="col-md-1 p-r-5 text-right">Contenu:</label>
                        <textarea  rows="3" name="comment_edit_content" id="comment_edit_content"
                                  >{{ comment.text }}</textarea>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary col-md-offset-1" type="submit" value="Enregistrer"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}